/ {
	soc {
		imr-lx4@fe860000 {
			xen,passthrough;
			iommus = <&ipmmu_vc0 0>;
		};

		imr-lx4@fe870000 {
			xen,passthrough;
			iommus = <&ipmmu_vc0 0>;
		};
	};
};

